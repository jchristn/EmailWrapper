<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452</TargetFrameworks>
    <AssemblyName>EmailModule</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>EmailWrapper</PackageId>
    <Version>1.0.2</Version>
    <Authors>Joel Christner</Authors>
    <Product>EmailWrapper</Product>
    <Description>Simple email wrapper in C# for SMTP and Mailgun</Description>
    <Copyright>(c)2019 Joel Christner</Copyright>
    <PackageProjectUrl>https://github.com/jchristn/EmailWrapper</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jchristn/EmailWrapper</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageLicenseUrl>https://github.com/jchristn/EmailWrapper/blob/master/LICENSE.txt</PackageLicenseUrl>
    <PackageTags>email smtp mailgun mail</PackageTags>
    <PackageReleaseNotes>Retarget to .NET Core 2.0 and .NET Framework 4.5.2</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="RestSharp" Version="106.6.9" />
  </ItemGroup>

</Project>
